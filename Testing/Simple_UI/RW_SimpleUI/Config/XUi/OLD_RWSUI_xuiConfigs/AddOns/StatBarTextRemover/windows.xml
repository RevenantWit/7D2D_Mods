<configs>

<conditional>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(6,0) and mod_version('RWSUI_HUD_Settings') &lt; version(7,0)">
		<set xpath="//window//OLD_rwsui_hud_statBarR/@text_hidden">true</set>
		<set xpath="//window/OLD_rwsui_hud_xpBarR/@text_hidden">true</set>
		<set xpath="//window[@name='RWSUI_ToolBelt15']//OLD_rwsui_toolbelt_xpBar/@text_hidden">true</set>
	</if>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(7,0) and mod_version('RWSUI_HUD_Settings') &lt; version(7,3)">
		<set xpath="//window//OLD_rwsui_toolbelt_xpBar/@text_hidden">true</set>
		<set xpath="//window/OLD_rwsui_hud_statBar/@text_hidden">true</set>
	</if>
</conditional>

</configs>
