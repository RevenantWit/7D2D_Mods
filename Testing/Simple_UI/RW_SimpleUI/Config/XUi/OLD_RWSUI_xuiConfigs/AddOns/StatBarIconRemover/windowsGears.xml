<configs>

<conditional>
	<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarType') == 'Round'">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'ToolBelt'">
				<set xpath="//window//OLD_rwsui_hud_statBarR/@icon_hidden">true</set>
				<set xpath="//window/OLD_rwsui_hud_xpBarR/@icon_hidden">true</set>
				<set xpath="//window[@name='RWSUI_ToolBelt15']/rect//OLD_rwsui_hud_doubleNoText_stealthBar/@icon_hidden">true</set>
				<set xpath="//window[@name='RWSUI_ToolBelt15']//OLD_rwsui_toolbelt_xpBar/@icon_hidden">true</set>
			</if>
		</conditional>
	</if>
	<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarType') == 'MiniHUD'">
		<set xpath="//window/rect//OLD_rwsui_hud_doubleNoText_stealthBar/@icon_hidden">true</set>
		<set xpath="//window//OLD_rwsui_toolbelt_xpBar/@icon_hidden">true</set>
		<set xpath="//window/OLD_rwsui_hud_statBar/@icon_hidden">true</set>
	</if>
</conditional>

</configs>
