<!--_Blockers START-->
<!--HUD Blocker-->
<conditional>
	<if cond="mod_loaded('RWSUI_HUD_Blocker')">
		<!-- If HUD Blocker is installed do nothing -->
	</if>
	<if cond="mod_loaded('Gears')">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'Misc.SimpleUIBlockers.HUDBlocker') == 'Off'">
				<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='HUDLeftStatBars' or @name='RWSUI_LeftHUD']/@name">RWSUI_LeftHUD</set>
				<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='HUDRightStatBars' or @name='RWSUI_RightHUD']/@name">RWSUI_RightHUD</set>
			</if>
		</conditional>
	</if>
	<else>
		<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='HUDLeftStatBars' or @name='RevsWW_LeftHUD' or @name='RevsWW_MultiHUD' or @name='RWSUI_LeftHUD']/@name">RWSUI_LeftHUD</set>
		<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='HUDRightStatBars' or @name='RWSUI_RightHUD']/@name">RWSUI_RightHUD</set>
	</else>
</conditional>
<!--ToolBelt Blocker-->
<conditional>
	<if cond="mod_loaded('RWSUI_ToolBelt_Blocker')">
		<!-- If Toolbelt Blocker is installed do nothing -->
	</if>
	<if cond="mod_loaded('Gears')">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'Misc.SimpleUIBlockers.ToolBeltBlocker') == 'Off'">
				<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='windowToolbelt' or @name='RWSUI_ToolBelt10' or @name='RWSUI_ToolBelt12' or @name='RWSUI_ToolBelt15']/@name">RWSUI_ToolBelt10</set>
			</if>
		</conditional>
	</if>
	<else>
		<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='windowToolbelt' or @name='RWSUI_ToolBelt10' or @name='RWSUI_ToolBelt12' or @name='RWSUI_ToolBelt15']/@name">RWSUI_ToolBelt10</set>
	</else>
</conditional>
<!--_Blockers END-->

<!--_Location_PopUp START-->
<conditional>
	<if cond="mod_loaded('RWSUI_NoLPU')">
		<!-- Check for old add on to avoid conflicts -->
		<!-- This check will get removed in a future update -->
	</if>
	<!-- remove the pop up from it's window group so it no longers gets called when entering a location. -->
	<if cond="mod_loaded('RWSUI_LocationPopUpRemover')">
		<remove xpath="/xui/ruleset/window_group[@name='compass']/window[@name='windowEntering']"/>
	</if>
	<if cond="mod_loaded('Gears')">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'Misc.PopUps.LocationPopUps') == 'Off'">
				<remove xpath="/xui/ruleset/window_group[@name='compass']/window[@name='windowEntering']"/>
			</if>
		</conditional>
	</if>
</conditional>
<!--_Location_PopUp END-->

<!--_12_Slot_ToolBelt START-->
<conditional>
	<if cond="mod_loaded('WMM12SlotToolbelt') or mod_loaded('TheMeanOnes12SlotToolbelt') or mod_loaded('Dewtas12SlotToolbelt')">
		<conditional>
			<if cond="mod_loaded('RWSUI_ToolBelt_Blocker')">
				<!-- If Toolbelt Blocker is installed do nothing -->
			</if>
			<if cond="mod_loaded('Gears')">
				<conditional>
					<if cond="modsetting('RW_SimpleUI', 'global', 'Misc.SimpleUIBlockers.ToolBeltBlocker') == 'Off'">
						<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='windowToolbelt' or @name='RWSUI_ToolBelt10' or @name='RWSUI_ToolBelt12' or @name='RWSUI_ToolBelt15']/@name">RWSUI_ToolBelt12</set>
					</if>
				</conditional>
			</if>
			<else>
				<set xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='windowToolbelt' or @name='RWSUI_ToolBelt10' or @name='RWSUI_ToolBelt12' or @name='RWSUI_ToolBelt15']/@name">RWSUI_ToolBelt12</set>
			</else>
		</conditional>
	</if>
</conditional>
<!--_12_Slot_ToolBelt END-->

