<configs>

<conditional>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(1,0) and mod_version('RWSUI_HUD_Settings') &lt; version(3,0)">
		<set xpath="//window/rect//rwsui_hud_statBar/@text_hidden">true</set>
		<set xpath="//window//rwsui_toolbelt_xpBar/@text_hidden">true</set>
	</if>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(3,0) and mod_version('RWSUI_HUD_Settings') &lt; version(4,0)">
		<set xpath="//window/rect//rwsui_hud_statBarR/@text_hidden">true</set>
		<set xpath="//window//rwsui_hud_xpBarR/@text_hidden">true</set>
	</if>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(4,0) and mod_version('RWSUI_HUD_Settings') &lt; version(5,0)">
		<set xpath="//window//rwsui_toolbelt_xpBar/@text_hidden">true</set>
		<set xpath="//window/rwsui_hud_statBar_reverseFillH/@text_hidden">true</set>
		<set xpath="//window/rwsui_hud_statBar/@text_hidden">true</set>
	</if>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(5,0) and mod_version('RWSUI_HUD_Settings') &lt; version(6,0)">
		<set xpath="//window//rwsui_toolbelt_xpBar/@text_hidden">true</set>
		<set xpath="//window/rwsui_hud_statBar/@text_hidden">true</set>
	</if>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(6,0) and mod_version('RWSUI_HUD_Settings') &lt; version(7,0)">
		<set xpath="//window//rwsui_hud_statBarR/@text_hidden">true</set>
		<set xpath="//window/rwsui_hud_xpBarR/@text_hidden">true</set>
		<set xpath="//window[@name='RWSUI_ToolBelt15']//rwsui_toolbelt_xpBar/@text_hidden">true</set>
	</if>
	<if cond="mod_version('RWSUI_HUD_Settings') &gt;= version(7,0) and mod_version('RWSUI_HUD_Settings') &lt; version(7,3)">
		<set xpath="//window//rwsui_toolbelt_xpBar/@text_hidden">true</set>
		<set xpath="//window/rwsui_hud_statBar/@text_hidden">true</set>
	</if>
	<else>
		<set xpath="//window/rect//rwsui_hud_statBar/@text_hidden">true</set>
		<set xpath="//window//rwsui_toolbelt_xpBar/@text_hidden">true</set>
	</else>
</conditional>

</configs>
