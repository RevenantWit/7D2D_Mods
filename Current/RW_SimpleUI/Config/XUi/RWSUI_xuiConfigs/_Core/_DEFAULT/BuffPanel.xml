<configs>

<append xpath="//window[@name='RWSUI_LeftHUD']">

	<!--Simple Buff Panel when stealth is not visible-->
	<rect name="buffsSNV" controller="HUDStatBar" stat_type="Stealth" visible="{# !statvisible}">
		<rwsui_hud_simple_buffpanel3x10 pos="0,48" width="55" height="46" panel_offset="2" border_color="[rwsui_buffpanel_border_color]" background_color="[rwsui_buffpanel_background_color]" icon_size="24,24" icon_pos="15,-20" icon_color="[rwsui_buffpanel_icon_color]" text_pos="1,-3" text_width="53" font_size="14" text_height="14" text="{buffdisplayinfo}" text_color="[rwsui_buffpanel_text_color]" textOutline_color="[rwsui_buffpanel_textOutline_color]" textOutline_size="[rwsui_buffpanel_textOutline_size]" text_justify="center" tooltip="{buffname|once}  [DECEA3]{buffdisplayinfo}[-]" on_hover="true" />
	</rect>

	<!--Simple Buff Panel when stealth is visible-->
	<rect name="buffsSV" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
		<rwsui_hud_simple_buffpanel3x10 pos="0,98" width="55" height="46" panel_offset="2" border_color="[rwsui_buffpanel_border_color]" background_color="[rwsui_buffpanel_background_color]" icon_size="24,24" icon_pos="15,-20" icon_color="[rwsui_buffpanel_icon_color]" text_pos="1,-3" text_width="53" font_size="14" text_height="14" text="{buffdisplayinfo}" text_color="[rwsui_buffpanel_text_color]" textOutline_color="[rwsui_buffpanel_textOutline_color]" textOutline_size="[rwsui_buffpanel_textOutline_size]" text_justify="center" tooltip="{buffname|once}  [DECEA3]{buffdisplayinfo}[-]" on_hover="true" />
	</rect>

</append>

</configs>