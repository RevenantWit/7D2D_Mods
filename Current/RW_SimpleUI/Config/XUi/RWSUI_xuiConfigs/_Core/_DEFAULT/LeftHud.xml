<configs>

<append xpath="/windows">

	<window name="RWSUI_LeftHUD" anchor="LeftBottom" pos="5,146" >
		<rect name="leftHUDwindow" side="right">
			<!--Stealth Bar when nothing is alerted to player-->
			<rect name="StealthBar01" controller="HUDStatBar" stat_type="Stealth" visible="{# stealthcolor == '50,135,0,255'}">
				<rwsui_hud_statBar pos="0,49" controller="HUDStatBar" stat_type="Stealth" barBackground_fill="1" filldirection="horizontal" width="171" height="46" barBackground_color="[rwsui_stealthbar_background_color]" barContent_color="[rwsui_stealthbar_content_safeColor]" icon_pos="26,-24" icon_size="35,35" sprite="{staticon|once}" icon_color="[rwsui_stealthbar_icon_color]" text_pos="38,-11" text_width="125" font_size="26" text_height="24" text="{statcurrent}" text_color="[rwsui_stealthbar_text_color]" textOutline_color="[rwsui_stealthbar_textOutline_color]" textOutline_size="[rwsui_stealthbar_textOutline_size]" text_justify="center" />
			</rect>

			<!--Stealth Bar when something is alerted to the player-->
			<rect name="StealthBar02" controller="HUDStatBar" stat_type="Stealth" visible="{# stealthcolor != '50,135,0,255'}">
				<rwsui_hud_statBar pos="0,49" controller="HUDStatBar" stat_type="Stealth" barBackground_fill="1" filldirection="horizontal" width="171" height="46" barBackground_color="[rwsui_stealthbar_background_color]" barContent_color="[rwsui_stealthbar_content_dangerColor]" icon_pos="26,-24" icon_size="35,35" sprite="{staticon|once}" icon_color="[rwsui_stealthbar_icon_color]" text_pos="38,-11" text_width="125" font_size="26" text_height="24" text="{statcurrent}" text_color="[rwsui_stealthbar_text_color]" textOutline_color="[rwsui_stealthbar_textOutline_color]" textOutline_size="[rwsui_stealthbar_textOutline_size]" text_justify="center" />
			</rect>

			<!--Stamina Bar-->
			<rwsui_hud_statBar pos="0,0" controller="HUDStatBar" stat_type="Stamina" barBackground_fill="{statmodifiedmax}" filldirection="horizontal" width="171" height="46" barBackground_color="[rwsui_staminabar_background_color]" barContent_color="[rwsui_staminabar_content_color]" icon_pos="26,-24" icon_size="35,35" sprite="{# sprintactive ? 'server_z_always_run' : 'ui_game_symbol_agility'}" icon_color="[rwsui_staminabar_icon_color]" text_pos="38,-11" text_width="125" font_size="26" text_height="24" text="{statcurrentwithmax}" text_color="[rwsui_staminabar_text_color]" textOutline_color="[rwsui_staminabar_textOutline_color]" textOutline_size="[rwsui_staminabar_textOutline_size]" text_justify="center" />

			<!--Health Bar-->
			<rwsui_hud_statBar pos="0,-49" controller="HUDStatBar" stat_type="Health" barBackground_fill="{statmodifiedmax}" filldirection="horizontal" width="171" height="46" barBackground_color="[rwsui_healthbar_background_color]" barContent_color="[rwsui_healthbar_content_color]" icon_pos="26,-24" icon_size="35,35" sprite="{staticon|once}" icon_color="[rwsui_healthbar_icon_color]" text_pos="38,-11" text_width="125" font_size="26" text_height="24" text="{statcurrentwithmax}" text_color="[rwsui_healthbar_text_color]" textOutline_color="[rwsui_healthbar_textOutline_color]" textOutline_size="[rwsui_healthbar_textOutline_size]" text_justify="center" />

			<!--Food Bar-->
			<rwsui_hud_statBar pos="0,-98" controller="HUDStatBar" stat_type="Food" barBackground_fill="1" filldirection="horizontal" width="85" height="46" barBackground_color="[rwsui_foodbar_background_color]" barContent_color="[rwsui_foodbar_content_color]" icon_pos="17,-24" icon_size="25,25" sprite="{staticon|once}" icon_color="[rwsui_foodbar_icon_color]" text_pos="34,-14" text_width="40" font_size="26" text_height="24" text="{# statcurrent &lt; '99' ? statcurrent : '100'}%" text_color="[rwsui_foodbar_text_color]" textOutline_color="[rwsui_foodbar_textOutline_color]" textOutline_size="[rwsui_foodbar_textOutline_size]" text_justify="center" />

			<!--Water Bar-->
			<rwsui_hud_statBar pos="86,-98" controller="HUDStatBar" stat_type="Water" barBackground_fill="1" filldirection="horizontal" width="85" height="46" barBackground_color="[rwsui_waterbar_background_color]" barContent_color="[rwsui_waterbar_content_color]" icon_pos="17,-23" icon_size="25,25" sprite="{staticon|once}" icon_color="[rwsui_waterbar_icon_color]" text_pos="34,-14" text_width="40" font_size="26" text_height="24" text="{# statcurrent &lt; '99' ? statcurrent : '100'}%" text_color="[rwsui_waterbar_text_color]" textOutline_color="[rwsui_waterbar_textOutline_color]" textOutline_size="[rwsui_waterbar_textOutline_size]" text_justify="center" />
		</rect>

	</window>

</append>

</configs>