<configs>

<append xpath="//window[@name='RWSUI_LeftHUD']">
	<!--Vanilla Buff Panel when stealth is not visible-->
	<rect name="buffsSNV" controller="HUDStatBar" stat_type="Stealth" visible="{# !statvisible}">
		<rwsui_hud_vanilla_buffpanel pos="82,25" panel_width="168" panel_height="46" icon_size="35,35" icon_pos="-73,18" text_pos="-42,0" text_width="118" font_size="26" text_height="24" />
	</rect>

	<!--Vanilla Buff Panel when stealth is visible-->
	<rect name="buffsSV" controller="HUDStatBar" stat_type="Stealth" visible="{statvisible}">
		<rwsui_hud_vanilla_buffpanel pos="82,75" panel_width="168" panel_height="46" icon_size="35,35" icon_pos="-73,18" text_pos="-42,0" text_width="118" font_size="26" text_height="24" />
	</rect>
</append>

</configs>