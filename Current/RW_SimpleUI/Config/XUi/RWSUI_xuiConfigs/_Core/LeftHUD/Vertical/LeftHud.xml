<configs>

<append xpath="/windows">

	<window name="RWSUI_LeftHUD" anchor="LeftBottom" pos="5,146" >
		<rect name="leftHUDwindow" side="right">
			<!--Vertical Stealth Bar when nothing is alerted to player-->
			<rect name="StealthBar01" controller="HUDStatBar" stat_type="Stealth" visible="{# stealthcolor == '50,135,0,255'}">
				<rwsui_hud_statBar pos="204,5" controller="HUDStatBar" stat_type="Stealth" barBackground_fill="1" filldirection="vertical" width="50" height="150" barBackground_color="[rwsui_stealthbar_background_color]" barContent_color="[rwsui_stealthbar_content_safeColor]" icon_pos="24,-130" icon_size="30,30" sprite="{staticon|once}" icon_color="[rwsui_stealthbar_icon_color]" icon_hidden="false" text_pos="1,-90" text_width="46" font_size="18" text_height="16" text="{statcurrent}" text_color="[rwsui_stealthbar_text_color]" textOutline_color="[rwsui_stealthbar_textOutline_color]" textOutline_size="[rwsui_stealthbar_textOutline_size]" text_justify="center" text_hidden="false" />
			</rect>

			<!--Vertical Stealth Bar when something is alerted to the player-->
			<rect name="StealthBar02" controller="HUDStatBar" stat_type="Stealth" visible="{# stealthcolor != '50,135,0,255'}">
				<rwsui_hud_statBar pos="204,5" controller="HUDStatBar" stat_type="Stealth" barBackground_fill="1" filldirection="vertical" width="50" height="150" barBackground_color="[rwsui_stealthbar_background_color]" barContent_color="[rwsui_stealthbar_content_dangerColor]" icon_pos="24,-130" icon_size="30,30" sprite="{staticon|once}" icon_color="[rwsui_stealthbar_icon_color]" icon_hidden="false" text_pos="1,-90" text_width="46" font_size="18" text_height="16" text="{statcurrent}" text_color="[rwsui_stealthbar_text_color]" textOutline_color="[rwsui_stealthbar_textOutline_color]" textOutline_size="[rwsui_stealthbar_textOutline_size]" text_justify="center" text_hidden="false" />
			</rect>

			<!--Vertical Stamina Bar-->
			<rwsui_hud_statBar pos="0,5" controller="HUDStatBar" stat_type="Stamina" barBackground_fill="{statmodifiedmax}" filldirection="vertical" width="50" height="150" barBackground_color="[rwsui_staminabar_background_color]" barContent_color="[rwsui_staminabar_content_color]" icon_pos="24,-130" icon_size="30,30" sprite="{# sprintactive ? 'server_z_always_run' : 'ui_game_symbol_agility'}" icon_color="[rwsui_staminabar_icon_color]" icon_hidden="false" text_pos="1,-90" text_width="46" font_size="18" text_height="16" text="{# length(statcurrent)==0 ? '' : Round(float(statcurrent), 0)}" text_color="[rwsui_staminabar_text_color]" textOutline_color="[rwsui_staminabar_textOutline_color]" textOutline_size="[rwsui_staminabar_textOutline_size]" text_justify="center" text_hidden="false" />

			<!--Vertical Health Bar-->
			<rwsui_hud_statBar pos="51,5" controller="HUDStatBar" stat_type="Health" barBackground_fill="{statmodifiedmax}" filldirection="vertical" width="50" height="150" barBackground_color="[rwsui_healthbar_background_color]" barContent_color="[rwsui_healthbar_content_color]" icon_pos="24,-130" icon_size="30,30" sprite="{staticon|once}" icon_color="[rwsui_healthbar_icon_color]" icon_hidden="false" text_pos="1,-90" text_width="46" font_size="18" text_height="16" text="{statcurrent}" text_color="[rwsui_healthbar_text_color]" textOutline_color="[rwsui_healthbar_textOutline_color]" textOutline_size="[rwsui_healthbar_textOutline_size]" text_justify="center" text_hidden="false" />

			<!--Vertical Food Bar-->
			<rwsui_hud_statBar pos="102,5" controller="HUDStatBar" stat_type="Food" barBackground_fill="1" filldirection="vertical" width="50" height="150" barBackground_color="[rwsui_foodbar_background_color]" barContent_color="[rwsui_foodbar_content_color]" icon_pos="24,-130" icon_size="30,30" sprite="{staticon|once}" icon_color="[rwsui_foodbar_icon_color]" icon_hidden="false" text_pos="1,-90" text_width="46" font_size="18" text_height="16" text="{# statcurrent &lt; '99' ? statcurrent : '100'}%" text_color="[rwsui_foodbar_text_color]" textOutline_color="[rwsui_foodbar_textOutline_color]" textOutline_size="[rwsui_foodbar_textOutline_size]" text_justify="center" text_hidden="false" />

			<!--Vertical Water Bar-->
			<rwsui_hud_statBar pos="153,5" controller="HUDStatBar" stat_type="Water" barBackground_fill="1" filldirection="vertical" width="50" height="150" barBackground_color="[rwsui_waterbar_background_color]" barContent_color="[rwsui_waterbar_content_color]" icon_pos="24,-130" icon_size="30,30" sprite="{staticon|once}" icon_color="[rwsui_waterbar_icon_color]" icon_hidden="false" text_pos="1,-90" text_width="46" font_size="18" text_height="16" text="{# statcurrent &lt; '99' ? statcurrent : '100'}%" text_color="[rwsui_waterbar_text_color]" textOutline_color="[rwsui_waterbar_textOutline_color]" textOutline_size="[rwsui_waterbar_textOutline_size]" text_justify="center" text_hidden="false" />
		</rect>

	</window>

</append>

</configs>