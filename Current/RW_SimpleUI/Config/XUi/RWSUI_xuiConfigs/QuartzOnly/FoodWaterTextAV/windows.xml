<configs>

<conditional>
	<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarType') == 'Horizontal'">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'Bottom_Left'">
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}/{statmax}</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@icon_hidden">true</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text_pos">5,-13</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text_width">70</set>
			</if>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'ToolBelt'">
				<set xpath="//window/rwsui_hud_statBar[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
				<set xpath="//window/rwsui_hud_statBar[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
				<set xpath="//window/rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}/{statmax}</set>
			</if>
		</conditional>
	</if>
	<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarType') == 'Vertical'">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'Bottom_Left'">
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
				<set xpath="//window//rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}</set>
			</if>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'ToolBelt'">
				<set xpath="//window/rwsui_hud_statBar[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
				<set xpath="//window/rwsui_hud_statBar[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
				<set xpath="//window/rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}</set>
			</if>
		</conditional>
	</if>
	<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarType') == 'Round'">
		<conditional>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'Bottom_Left'">
				<set xpath="//window//rwsui_hud_statBarR[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
				<set xpath="//window//rwsui_hud_statBarR[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
				<set xpath="//window//rwsui_hud_statBarR[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}</set>
			</if>
			<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarLocation') == 'ToolBelt'">
				<set xpath="//window/rwsui_hud_statBarR[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
				<set xpath="//window/rwsui_hud_statBarR[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
				<set xpath="//window/rwsui_hud_statBarR[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}</set>
			</if>
		</conditional>
	</if>
	<if cond="modsetting('RW_SimpleUI', 'global', 'HUD.StatBars.StatBarType') == 'MiniHUD'">
		<set xpath="//window/rwsui_hud_statBar[@stat_type='Food']/@controller">Quartz.HUDFood, Quartz</set>
		<set xpath="//window/rwsui_hud_statBar[@stat_type='Water']/@controller">Quartz.HUDWater, Quartz</set>
		<set xpath="//window/rwsui_hud_statBar[@stat_type='Food' or @stat_type='Water']/@text">{# statcurrent &lt; (statmax-1) ? statcurrent : statmax}/{statmax}</set>
	</if>
</conditional>

</configs>
